{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["."],
  "exclude": ["vite.config.ts", "demo-new-structure.tsx", "src/test-*.ts", "test-*.ts", "src/components/StageIndicatorNew.tsx", "src/pages/AppContent.tsx", "src/services/investorProjectService.ts", "types-new-structure.ts", "i18n-new-phases.ts", "demo.html", "old/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}